<div class="row">
<% @products.each do |product| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= product.title %></h3>
      </div>
      <div class="img-holder">
        <%= image_tag product.image_url, :data=>{:src => "holder.js/100x100"} , class:"img-product center-block"%>
      </div>
      <div class="caption">
        <p><%= product.description %></p>
        <p><%= product.price %> </p>
        <p> <a href="#" class="btn btn-primary" role="button">Comprar</a></p>
        <p> <%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
   </div>
  </div>
<% end %>
</div>

<%= link_to 'New Product', new_product_path %>
